@model List<FavoriteCLubsViewModel>

@{
    ViewBag.Title = "Favorite clubs";
}

@if (Model.Count == 0)
{
    <h1>You don't have favorite clubs added</h1>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="list-group">
                    @foreach (var club in Model)
                    {
                        <a asp-controller="Club" asp-action="CLubById" asp-route-id="@club.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center league-name">
                            <div class="image-parent">
                                <img src="~/imgs/Clubs/@(club.Logo)" class="img-fluid league-logo" alt="@club.Name">
                            </div>
                            @club.Name
                            <div class="image-parent">
                                <img src="~/imgs/Leagues/@(club.LeagueLogo)" class="img-fluid league-logo">
                            </div>
                            <form class="input-group-sm" asp-controller="Club" asp-action="RemoveFromFavorites" asp-route-id="@club.Id">
                                <input type="submit" value="Remove from Favorites" class="fs-6 btn btn-success mb-3 p-2" />
                            </form>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}
