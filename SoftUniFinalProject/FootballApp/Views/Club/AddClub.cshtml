@model AddClubViewModel
@{
    ViewBag.Title = "Add Club";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Nickname" class="form-label">Nickname</label>
                <input asp-for="@Model.Nickname" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Nickname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Logo" class="form-label">Logo</label>
                <textarea asp-for="@Model.Logo" class="form-control" aria-required="true"></textarea>
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Wins" class="form-label">Wins</label>
                <input type="number" asp-for="@Model.Wins" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Wins" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Loses" class="form-label">Loses</label>
                <input type="number" asp-for="@Model.Loses" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Loses" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Draws" class="form-label">Draws</label>
                <input type="number" asp-for="@Model.Draws" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Draws" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.MatchesPlayed" class="form-label">MatchesPlayed</label>
                <input type="number" asp-for="@Model.MatchesPlayed" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.MatchesPlayed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ScoredGoals" class="form-label">ScoredGoals</label>
                <input type="number" asp-for="@Model.ScoredGoals" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ScoredGoals" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ConcededGoals" class="form-label">ConcededGoals</label>
                <input type="number" asp-for="@Model.ConcededGoals" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ConcededGoals" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LeagueId" class="form-label">LeagueId</label>
                <input type="number" asp-for="@Model.LeagueId" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.LeagueId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StadiumId" class="form-label">StadiumId</label>
                <input type="number" asp-for="@Model.StadiumId" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.StadiumId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
