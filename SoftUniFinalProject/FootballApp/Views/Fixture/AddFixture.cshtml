@model FixtureAddViewModel
@{
    ViewBag.Title = "Add Club";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddFixture" method="post">
            <div class="mb-3">
                <label asp-for="@Model.LeagueId" class="form-label">League</label>
                <select asp-for="@Model.LeagueId" class="form-control">
                    @foreach (var league in @Model.Leagues)
                    {
                        <option value="@league.Id">@league.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.LeagueId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HomeClubId" class="form-label">HomeClub</label>
                <select asp-for="@Model.HomeClubId" class="form-control">
                    @foreach (var club in @Model.Clubs)
                    {
                        <option value="@club.Id">@club.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.HomeClubId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AwayClubId" class="form-label">AwayClub</label>
                <select asp-for="@Model.AwayClubId" class="form-control">
                    @foreach (var club in @Model.Clubs)
                    {
                        <option value="@club.Id">@club.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.AwayClubId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.StartTime" class="form-label-add-edit">StartTime</label>
                <input asp-for="@Model.StartTime" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
                <span asp-validation-for="@Model.StartTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
