            <label asp-for="@Model.Position" class="form-label">Position</label>
            <select asp-for="@Model.Position" class="form-control">
            <option value="@("Goalkeeper".ToString())">@("Goalkeeper".ToString())</option>
            <option value="@("Defender".ToString())">@("Defender".ToString())</option>
            <option value="@("Midfielder".ToString())">@("Midfielder".ToString())</option>
            <option value="@("Attacker".ToString())">@("Attacker".ToString())</option>
            </select>
            <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>*@
            @*<div class="mb-3">
            <label asp-for="@Model.StadiumId" class="form-label">Stadium</label>
            <select asp-for="@Model.StadiumId" class="form-control">
            @foreach (var stadium in @Model.Stadiums)
            {
            <option value="@stadium.Id">@stadium.Name</option>
            }
            </select>
            <span asp-validation-for="@Model.StadiumId" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
