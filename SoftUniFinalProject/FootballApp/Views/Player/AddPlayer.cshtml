@model AddPlayerViewModel
@{
    ViewBag.Title = "Add Player";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddPlayer" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label">FirstName</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label">LastName</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Age" class="form-label">Age</label>
                <input type="number" asp-for="@Model.Age" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Picture" class="form-label">Picture</label>
                <textarea asp-for="@Model.Picture" class="form-control" aria-required="true"></textarea>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Number" class="form-label">Number</label>
                <input type="number" asp-for="@Model.Number" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Number" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Goals" class="form-label">Goals</label>
                <input type="number" asp-for="@Model.Goals" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Goals" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Assists" class="form-label">Assists</label>
                <input type="number" asp-for="@Model.Assists" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Assists" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.MatchesPlayed" class="form-label">MatchesPlayed</label>
                <input type="number" asp-for="@Model.MatchesPlayed" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.MatchesPlayed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Country" class="form-label">Country</label>
                <input asp-for="@Model.Country" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Position" class="form-label">Position</label>
                <input asp-for="@Model.Position" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>
