@model List<AllLeaguesViewModel>
@{
    ViewBag.Title = "Leagues";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h6 class="text-muted">List Group with Images</h6>
            <div class="list-group">
                @foreach (var league in Model)
                {
                    <a asp-controller="League" asp-action="ShowById" asp-route-id="@league.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center league-name">
                        @league.Name
                        <div class="image-parent">
                            <img src="~/imgs/Leagues/@(league.Logo)" class="img-fluid league-logo" alt="@league.Name">
                        </div>
                    </a>
                    @*<li class="list-group-item d-flex justify-content-between align-items-center">
                        <a class="league-name" asp-controller="League" asp-action="ShowById" asp-route-id="@league.Id">@league.Name</a>
                        <a class="image-parent" asp-controller="League" asp-action="ShowById" asp-route-id="@league.Id">
                            <img src="~/imgs/Leagues/@(league.Logo)" class="img-fluid league-logo" alt="@league.Name">
                        </a>
                    </li>*@
                }
            </div>
        </div>
    </div>
</div>
